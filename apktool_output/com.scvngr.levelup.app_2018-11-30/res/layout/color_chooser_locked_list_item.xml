<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/unlock_text" style="@style/unlock_text" />
    <RelativeLayout android:background="@drawable/white_background_blue_selector" android:layout_height="@dimen/list_preferred_item_height" style="@style/levelup_list_color_item">
        <ImageView android:id="@id/color_locked_image" android:paddingLeft="@dimen/frame_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cc_lock" android:layout_centerVertical="true" />
        <View android:id="@id/locked_swatch" android:background="@color/dark_grey_text" android:layout_toRightOf="@id/color_locked_image" style="@style/color_swatch" />
        <TextView android:textColor="@color/dark_grey_text" android:id="@id/color_row_checked_text" android:layout_toRightOf="@id/locked_swatch" style="@style/color_text" />
    </RelativeLayout>
</LinearLayout>