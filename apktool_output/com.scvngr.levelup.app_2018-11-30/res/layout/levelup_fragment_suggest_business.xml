<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/levelup_suggest_business_group">
        <TextView android:id="@id/levelup_suggest_business_instructional_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/levelup_suggest_business_instructions" style="@style/levelup_suggest_business_instructional_text" />
        <LinearLayout android:orientation="vertical" android:id="@id/levelup_suggest_business_details_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:id="@id/levelup_suggest_business_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_layout_margin" android:hint="@string/levelup_suggest_business_name_hint" android:maxLines="1" android:inputType="textCapWords" style="@style/levelup_suggest_business_edit_text" />
            <EditText android:id="@id/levelup_suggest_business_street_address" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_layout_margin" android:hint="@string/levelup_suggest_business_street_address_hint" style="@style/levelup_suggest_business_edit_text" />
            <EditText android:id="@id/levelup_suggest_business_description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_layout_margin" android:hint="@string/levelup_suggest_business_description_hint" style="@style/levelup_suggest_business_edit_text" />
        </LinearLayout>
        <Button android:id="@id/levelup_suggest_business_submit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_suggest_business_submit_margin" android:text="@string/levelup_suggest_business_submit" style="@style/levelup_button_positive" />
    </LinearLayout>
</ScrollView>