<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/levelup_rewards_progress_image" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitCenter" android:adjustViewBounds="true" android:contentDescription="@null" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/levelup_rewards_progress_image">
        <TextView android:layout_gravity="center_horizontal" android:id="@id/levelup_rewards_remaining_steps" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/levelup_rewards_remaining_steps" />
        <TextView android:layout_gravity="center_horizontal" android:id="@id/levelup_rewards_step_description" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/levelup_rewards_description" />
        <View android:background="?android:colorForeground" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_margin="@dimen/levelup_padding" />
        <TextView android:layout_gravity="center_horizontal" android:id="@id/levelup_rewards_available_credit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" style="@style/levelup_rewards_credit" />
    </LinearLayout>
</RelativeLayout>