        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:showDividers="middle">
            <fragment android:tag="com.scvngr.levelup.ui.fragment.UserProfileHeaderFragment" android:layout_width="fill_parent" android:layout_height="wrap_content" class="com.scvngr.levelup.ui.fragment.UserProfileHeaderFragment" />
