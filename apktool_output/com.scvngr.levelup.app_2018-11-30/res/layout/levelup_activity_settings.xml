            <com.scvngr.levelup.ui.view.navigation.ActivityStartView android:id="@id/levelup_navigation_transaction_history" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/levelup_navigation_label_transaction_history" android:drawableLeft="@drawable/levelup_transaction_history" android:drawableRight="@drawable/ic_keyboard_arrow_right" app:destination="@string/levelup_activity_transaction_history" app:divider="@color/levelup_settings_divider" style="@style/profile_navigation" />
