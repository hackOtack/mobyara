        <View android:background="?android:colorForeground" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_margin="@dimen/levelup_padding" />
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/levelup_rewards_progress_visit" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@id/levelup_rewards_progress_earn" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <View style="@style/levelup_spacer" />
    </LinearLayout>
</ScrollView>