<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="@dimen/levelup_padding_outer" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/levelup_padding_inner" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/levelup_frame">
            <TextView android:id="@id/levelup_login_header" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/levelup_text_in_frame" />
            <EditText android:id="@android:id/text1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" android:hint="@string/levelup_global_hint_email" android:inputType="textEmailAddress" android:imeOptions="actionNext" />
            <EditText android:id="@android:id/text2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" android:inputType="textPassword" android:imeOptions="actionGo" />
            <TextView android:id="@id/levelup_login_description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" android:drawableLeft="@drawable/levelup_ic_login_alert" android:drawablePadding="@dimen/levelup_padding_drawable" />
        </LinearLayout>
        <Button android:id="@android:id/button1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" android:text="@string/levelup_login_submit_button_text" style="@style/levelup_button_positive" />
        <Button android:id="@android:id/button2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" android:text="@string/levelup_forgot_password_button_text" style="@style/levelup_button_neutral" />
        <com.scvngr.levelup.ui.view.LinkifiedTextView android:layout_gravity="center_horizontal" android:id="@id/levelup_terms_and_conditions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/levelup_space_between_elements" android:text="@string/levelup_terms_link_login" style="@style/levelup_terms_and_conditions" />
        <View style="@style/levelup_spacer" />
        <include layout="@layout/levelup_whitelabel_logo" />
    </LinearLayout>
</ScrollView>