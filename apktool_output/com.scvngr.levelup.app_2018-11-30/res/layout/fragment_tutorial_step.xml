<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:id="@id/fragment_tutorial_step_top_divider" style="@style/levelup_divider" />
    <FrameLayout android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <ImageView android:id="@id/fragment_tutorial_step_image_shadow" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/tutorial_step_shadow" android:scaleType="centerInside" />
        <ImageView android:id="@id/fragment_tutorial_step_image" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerInside" />
